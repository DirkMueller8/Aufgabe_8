<Window x:Class="Aufgabe_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aufgabe_8"
        mc:Ignorable="d"
        Title="Hangman" Height="209" Width="339">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="35*"/>
      <ColumnDefinition Width="78*"/>
    </Grid.ColumnDefinitions>
    <TextBox x:Name="txtWordDisplay" HorizontalAlignment="Left" Margin="45,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
    <Button x:Name="btnNewWord" Content="Create new" HorizontalAlignment="Left" Margin="95,42,0,0" VerticalAlignment="Top" Click="btnNewWord_Click" Grid.Column="1"/>
    <TextBox x:Name="txtGuess" HorizontalAlignment="Left" Margin="31,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="29" Grid.Column="1"/>
    <Button x:Name="btnGuess" Content="Guess character" HorizontalAlignment="Left" Margin="95,76,0,0" VerticalAlignment="Top" Click="btnGuess_Click" Grid.Column="1"/>
    <Label x:Name="lblFinished" Content="" HorizontalAlignment="Left" Margin="45,119,0,0" VerticalAlignment="Top" Width="265" Grid.ColumnSpan="2"/>

  </Grid>
</Window>
